<Page x:Class="BashkircevGlazkiSave.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BashkircevGlazkiSave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Наименование" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding Title}" FontSize="15" Width="250" Height="20"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Адрес" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding Address}" FontSize="15" Width="250" Height="20"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="ФИО директора" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding DirectorName}" FontSize="15" Width="250" Height="20"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Логотип" FontSize="15" Width="150" Height="20" />
            <Image Name="LogoImage">
                <Image.Source>
                    <Binding Path="Logo" TargetNullValue="/res/picture.png"/>
                </Image.Source>
            </Image>
            <Button Content="Изменить" Name="ChangePictureBtn" Click="ChangePictureBtn_Click" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Тип агента" FontSize="15" Width="150" Height="20"></TextBlock>
            <ComboBox Width="100" Height="30" FontSize="15" Name="ComboType">
                <Label Content="МФО"></Label>
                <Label Content="ООО"></Label>
                <Label Content="ЗАО"></Label>
                <Label Content="МКК"></Label>
                <Label Content="ОАО"></Label>
                <Label Content="ПАО"></Label>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Приоритет" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding Priority}" Width="250" Height="20"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="ИНН" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding INN}" Width="250" Height="20"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="КПП" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding KPP}" Width="250" Height="20"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Email" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding Email}" Width="250" Height="20"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Телефон" FontSize="15" Width="150"/>
            <TextBox Text="{Binding Phone}" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Name="SaveBtn" Click="SaveBtn_Click"></Button>
        </StackPanel>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Удалить" Name="DeleteBtn" Click="DeleteBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
