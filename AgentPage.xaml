<Page x:Class="BashkircevGlazkiSave.AgentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BashkircevGlazkiSave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Агенты" FontFamily="Century Gothic">
      

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView Grid.Row="1" Name="AgentListView" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170"></ColumnDefinition>
                            <ColumnDefinition Width="800"></ColumnDefinition>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Height="170" Width="170" Grid.RowSpan="4" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Center" >
                            <Image.Source>
                                <Binding Path="AgentPhotoPathFull">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /res/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <StackPanel  Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Margin="10,0,0,0" >

                            <TextBlock Text="{Binding AgentType.Title}" FontSize="20" />

                            <TextBlock Text=" | " FontSize="20"/>

                            <TextBlock Text="{Binding Title}" FontSize="20" />

                        </StackPanel>

                        <StackPanel  Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="10,0,0,0"  >

                            <TextBlock Text="{Binding TotalSales}" FontSize="20"></TextBlock>

                            <TextBlock Text=" Продаж за год" FontSize="20"/>

                        </StackPanel>

                        <TextBlock Text="{Binding Phone}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2" FontSize="20" Margin="10,0,0,0"></TextBlock>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="3" Margin="10,0,0,0">
                            <TextBlock Text="Приорететность: " FontSize="20"></TextBlock>
                            <TextBlock Text="{Binding Priority}" FontSize="20"></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" Margin="10,0,0,0">
                            <TextBlock Text="{Binding DiscountPercent}" FontSize="20"></TextBlock>
                            <TextBlock Text="%" FontSize="20"></TextBlock>
                        </StackPanel>
                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Row="2">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">

                <Button Content="&lt;" Width="25" Height="25" Margin="2" Name="PrevPage" Click="PrevPage_Click"/>

                <StackPanel Name="PageNumbers" Orientation="Horizontal" HorizontalAlignment="Center"/>

                <Button Content="&gt;" Width="25" Height="25" Margin="2" Name="NextPage" Click="NextPage_Click"/>

            </StackPanel>

        </Grid>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" Grid.Column="0">
            <TextBox Name="SearchBox" Width="200" Margin="5" VerticalAlignment="Center" TextChanged="SearchBox_TextChanged"></TextBox>
            <ComboBox Name="SortCombo" Width="220" Height="20" Margin="5" SelectionChanged="SortCombo_SelectionChanged">

                <ComboBoxItem Content="по наименованию (возрастание)"/>
                <ComboBoxItem Content="по наименованию (убывание)"/>

                <ComboBoxItem Content="по скидке (возрастание)"/>
                <ComboBoxItem Content="по скидке (убывание)"/>

                <ComboBoxItem Content="по приоритету (возрастание)"/>
                <ComboBoxItem Content="по приоритету (убывание)"/>
            </ComboBox>
            
            <ComboBox Name="FilterCombo" Width="180" Height="20" Margin="5" SelectionChanged="FilterCombo_SelectionChanged"></ComboBox>
        </StackPanel>
        
    </Grid>
</Page>
